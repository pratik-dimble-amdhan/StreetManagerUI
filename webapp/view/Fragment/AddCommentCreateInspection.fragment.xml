<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog showHeader="true" title="{i18n>Add works comments}">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="5" emptySpanL="0" columnsL="1">
				<TextArea id="idWorkComment" value="{CreateInsModel>/CreateInspectionWorkComment}"/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>cancel}" type="Ghost" press="onPressCancelWorkComment"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>save}" press="onSaveWorkComment"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>